	</servlet>
	
	<servlet-mapping>
		<servlet-name>AddUser</servlet-name>
		<url-pattern>/AddUser</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>AddUser</servlet-name>
		<servlet-class>com.johnnking.appsecdemo.servlets.AddUser</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>AddComment</servlet-name>
